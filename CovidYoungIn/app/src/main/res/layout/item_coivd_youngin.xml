<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_announce_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2022-01-25"/>

    <TextView
        android:id="@+id/tv_confirmed_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="확진자 150명"
        android:textStyle="normal"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_announce_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_announce_date"/>

    <TextView
        android:id="@+id/tv_isolated_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="격리환자 : 150명"
        android:textStyle="normal"
        android:textSize="13dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirmed_count"
        app:layout_constraintStart_toStartOf="@id/tv_confirmed_count"/>

    <TextView
        android:id="@+id/tv_canceled_isolated_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="격리해제 환자 : 30명"
        android:textStyle="normal"
        android:textSize="13dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_isolated_count"
        app:layout_constraintStart_toStartOf="@+id/tv_isolated_count"/>

    <TextView
        android:id="@+id/tv_dead_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="사망자 : 10명"
        android:textStyle="normal"
        android:textSize="13dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_canceled_isolated_count"
        app:layout_constraintStart_toStartOf="@+id/tv_canceled_isolated_count"/>

</androidx.constraintlayout.widget.ConstraintLayout>